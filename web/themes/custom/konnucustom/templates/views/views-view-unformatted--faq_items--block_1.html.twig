<div class="faq__group--wrapper">
  {% for row in rows %}
    {%
    set row_classes = [
    default_row_class ? 'views-row',
    ]
    %}
    {% if loop.first and title  %}
      <div class="faq__group--title"><h3>{{ title }}</h3></div>
      <div class="faq__content--wrapper">
    {% endif %}

  <div{{ row.attributes.addClass(row_classes) }}>

      {{ row.content }}
   </div>
      {% if loop.last %}
      </div>
    {% endif %}
  {% endfor %}
</div>
